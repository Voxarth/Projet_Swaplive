{% extends 'layout.twig' %}

{% block body %}

    <header>
        <h1>{{title}}</h1>
        <p>Welcome to
            {{title}}</p>
    </header>

    <div id="compte">

        <fieldset class="page" id="login">
            <legend>Création du compte utilisateur</legend>
            <form action="/users/" id="createAccount" method="post">

                <img
                alt="logo swap-live" src="/images/icone_swap.png">

                <!-- <label for="lastName">Nom:</label> -->
                <input
                class="input" name="lastName" placeholder="Votre nom" required type="text" value="">

                <!-- <label for="name">Prénom:</label> -->
                <input
                class="input" name="name" placeholder="Votre prénom" required type="text" value="">

                <!-- <label for="email">Email:</label> -->
                <input
                class="input" name="email" placeholder="email@mail.fr" required type="email" value="">

                <!-- <label for="password">Password:</label> -->
                <input class="input" name="password" placeholder="azerty123" required type="password" value="">

                <a href="/"><input type="submit" value="Valider"></a>
            </form>
        </fieldset>
    </div>

    <div class="page" id="conversations"></div>

    <script src="/javascript/app.js"></script>

{% endblock %}
